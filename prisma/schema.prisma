// Quantum Forge Database Schema
// Modern employee portal with AI-powered features

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// User Management
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String?   // Hashed password for credentials auth
  avatar        String?
  role          Role      @default(EMPLOYEE)
  department    String?
  title         String?
  bio           String?
  location      String?
  timezone      String?   @default("UTC")
  
  // Preferences
  theme         String?   @default("system")
  language      String?   @default("en")
  
  // Wellness tracking
  focusScore    Int?      // 0-100 productivity score
  focusMinutes  Int       @default(0) // Total focus time tracked
  
  // Authentication (NextAuth compatible)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  tasks         Task[]
  projects      Project[]
  teamMemberships TeamMember[]
  documents     Document[]
  notifications Notification[]
  activities    Activity[]
  posts         Post[]
  comments      Comment[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
  @@index([role])
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
  GUEST
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// Tasks & Projects
// ============================================================================

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  status      TaskStatus  @default(TODO)
  priority    Priority    @default(MEDIUM)
  
  // Dates
  dueDate     DateTime?
  completedAt DateTime?
  
  // Relations
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id])
  
  // Metadata
  tags        String[]    // ["urgent", "design", "frontend"]
  estimatedHours Float?
  actualHours    Float?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@index([dueDate])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  
  // Dates
  startDate   DateTime?
  targetDate  DateTime?
  
  // Relations
  ownerId     String
  owner       User          @relation(fields: [ownerId], references: [id])
  teamId      String?
  team        Team?         @relation(fields: [teamId], references: [id])
  tasks       Task[]
  documents   Document[]
  
  // Metadata
  progress    Int           @default(0) // 0-100
  tags        String[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([ownerId])
  @@index([status])
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}

// ============================================================================
// Teams & Collaboration
// ============================================================================

model Team {
  id          String       @id @default(cuid())
  name        String
  description String?
  department  String?
  
  // Relations
  members     TeamMember[]
  posts       Post[]
  projects    Project[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String     @id @default(cuid())
  role      MemberRole @default(MEMBER)
  
  // Relations
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId    String
  team      Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  joinedAt  DateTime   @default(now())
  
  @@unique([userId, teamId])
  @@index([userId])
  @@index([teamId])
}

enum MemberRole {
  LEADER
  MEMBER
}

// ============================================================================
// Communication & Content
// ============================================================================

model Post {
  id          String     @id @default(cuid())
  title       String?
  content     String
  type        PostType   @default(UPDATE)
  
  // Publishing
  published   Boolean    @default(false)
  publishedAt DateTime?
  
  // Relations
  authorId    String
  author      User       @relation(fields: [authorId], references: [id])
  teamId      String?
  team        Team?      @relation(fields: [teamId], references: [id])
  comments    Comment[]
  
  // Engagement
  views       Int        @default(0)
  likes       Int        @default(0)
  
  // Metadata
  tags        String[]
  featured    Boolean    @default(false)
  pinned      Boolean    @default(false)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([authorId])
  @@index([teamId])
  @@index([publishedAt])
}

enum PostType {
  ANNOUNCEMENT
  UPDATE
  ARTICLE
  POLL
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  
  // Relations
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([postId])
  @@index([authorId])
}

// ============================================================================
// Documents & Knowledge Management
// ============================================================================

model Document {
  id          String       @id @default(cuid())
  title       String
  description String?
  fileUrl     String       // S3, Azure Blob, etc.
  fileType    String       // "pdf", "docx", "xlsx", etc.
  fileSize    Int          // bytes
  
  // Organization
  category    String?
  tags        String[]
  
  // Relations
  uploaderId  String
  uploader    User         @relation(fields: [uploaderId], references: [id])
  projectId   String?
  project     Project?     @relation(fields: [projectId], references: [id])
  
  // Metadata
  version     Int          @default(1)
  downloads   Int          @default(0)
  views       Int          @default(0)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([uploaderId])
  @@index([projectId])
  @@index([category])
}

// ============================================================================
// Notifications & Activity Feed
// ============================================================================

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String
  link      String?          // Deep link to related content
  
  // Relations
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Status
  read      Boolean          @default(false)
  readAt    DateTime?
  
  createdAt DateTime         @default(now())
  
  @@index([userId, read])
  @@index([createdAt])
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_DUE
  TASK_COMPLETED
  PROJECT_UPDATE
  TEAM_MENTION
  DOCUMENT_SHARED
  ANNOUNCEMENT
  SYSTEM
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  description String
  metadata    Json?        // Flexible JSON for activity-specific data
  
  // Relations
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime     @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

enum ActivityType {
  TASK_CREATED
  TASK_COMPLETED
  PROJECT_CREATED
  DOCUMENT_UPLOADED
  POST_PUBLISHED
  COMMENT_ADDED
  TEAM_JOINED
}

// ============================================================================
// Analytics & Metrics
// ============================================================================

model Metric {
  id        String     @id @default(cuid())
  name      String     // "focus_sessions", "tasks_completed", "team_engagement"
  value     Float
  dimension String?    // "daily", "weekly", "monthly"
  tags      Json?      // {"department": "Engineering", "team": "Frontend"}
  
  timestamp DateTime   @default(now())
  
  @@index([name, timestamp])
}
