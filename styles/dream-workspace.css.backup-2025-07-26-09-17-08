/* FIXES FOR BLURRY NUMBERS AND WHITE-ON-WHITE TEXT */

/* Enhanced text rendering for all numbers in dream workspace */
.dream-workspace .stat-number,
.dream-workspace .workspace-stats .stat-number,
.dream-workspace .welcome-stats .stat-number,
.dream-workspace [class*="stat"] [class*="number"] {
    /* Enhanced text rendering for crisp numbers */
    text-rendering: optimizeLegibility !important;
    -webkit-font-smoothing: antialiased !important;
    -moz-osx-font-smoothing: grayscale !important;
    font-feature-settings: "kern" 1, "liga" 1 !important;
    /* Remove any transforms that might cause blur */
    transform: none !important;
    /* Remove any blur effects */
    filter: none !important;
    /* Force dark, highly visible colors */
    color: #1e293b !important; /* Dark, highly visible */
    /* Ensure proper contrast with dark shadow */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3) !important;
    /* Force crisp rendering */
    image-rendering: -webkit-optimize-contrast !important;
    image-rendering: crisp-edges !important;
}

/* Fix for white-on-white status text */
.dream-workspace .status-text,
.dream-workspace .workspace-status .status-text,
.dream-workspace .welcome-status .status-text {
    /* Ensure proper contrast */
    color: #475569 !important; /* Force darker, more visible color */
    /* Enhanced text rendering */
    text-rendering: optimizeLegibility !important;
    -webkit-font-smoothing: antialiased !important;
    -moz-osx-font-smoothing: grayscale !important;
    font-feature-settings: "kern" 1, "liga" 1 !important;
    /* Add stronger text shadow for better contrast */
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2) !important;
    /* Force hardware acceleration */
    transform: translateZ(0) !important;
    backface-visibility: hidden !important;
    perspective: 1000px !important;
    will-change: transform !important;
    font-weight: 600 !important;
}

