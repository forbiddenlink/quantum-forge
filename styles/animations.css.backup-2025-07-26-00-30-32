/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {

    .animate-shimmer,
    .animate-pulse,
    .animate-float,
    .animate-glow,
    .animate-fade-in,
    .animate-slide-up,
    .animate-scale-in {
        animation: none;
    }
}